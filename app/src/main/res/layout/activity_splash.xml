<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/lama_spacing_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/lama_spacing_medium"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_splash_screen_image_view_logo"
            android:layout_width="@dimen/splash_screen_logo_size"
            android:layout_height="@dimen/splash_screen_logo_size"
            android:scaleType="centerInside"
            android:src="@drawable/logo_hacettepe" />

        <TextView
            style="@style/LAMATextViewTheme"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/lama_spacing_small"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hacettepe_uni_text"
            android:layout_marginStart="@dimen/lama_spacing_small" />

    </LinearLayout>


    <ImageView
        android:id="@+id/activity_splash_screen_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/splash_image" />

    <TextView
        style="@style/LAMATextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/lama_spacing_medium"
        android:text="@string/app_description" />

</LinearLayout>


